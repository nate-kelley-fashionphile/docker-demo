#CHOOSE WHICH ENVIRONMENT TO USE
FROM node:17-alpine

WORKDIR /node17app

#COPY INSTALLATION FILES
COPY package*.json ./

#INSTALL DEPENDENCIES
RUN npm install

#COPY CODE FILES
COPY . .

#CONVERT TS TO JS
RUN npm run build

#WHICH PORT WILL BE USED
EXPOSE 3000

#START THE APPLICATION
CMD ["node", "index.js"]
